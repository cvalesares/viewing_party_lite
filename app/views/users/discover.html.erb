<h3>Discover Movies</h3>

<%= button_to 'Find Top Rated Movies', "/users/#{@user.id}/movies", params: { search: 'top_rated' }, method: :get %>

<%= form_with url: "/users/#{@user.id}/movies", local: true, method: :get do |form| %>
  <%= form.label :q, 'Search by Movie Title:' %>
  <%= form.text_field :q %>
  <%= form.submit 'Find Movies' %>
<% end %>
