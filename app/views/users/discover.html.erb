<h3>Discover Movies</h3>

<%= button_to 'Find Top Rated Movies', "/users/#{@user.id}/movies", params: { q: 'top_rated' }, method: :get %>

<%# defaults to a post %>
<%= form_with url: "/users/#{@user.id}/movies", local: true, method: :get do |form| %>
  <%= form.label :search, 'Search by Movie Title:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Find Movies' %>
<% end %>
